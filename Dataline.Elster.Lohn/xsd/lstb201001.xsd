									<xs:restriction base="elsterbase:allg_BaseStringSType">
										<xs:enumeration value="HB">
											<xs:annotation>
												<xs:documentation>Kammerbeitrag zur Arbeitnehmerkammer Bremen</xs:documentation>
											</xs:annotation>
										</xs:enumeration>
										<xs:enumeration value="SL">
											<xs:annotation>
												<xs:documentation>Kammerbeitrag zur Arbeitskammer Saarland </xs:documentation>
											</xs:annotation>
										</xs:enumeration>
									</xs:restriction>
								</xs:simpleType>
							</xs:attribute>
						</xs:extension>
					</xs:simpleContent>
				</xs:complexType>
