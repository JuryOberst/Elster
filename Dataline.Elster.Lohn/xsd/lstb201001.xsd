					<xs:documentation>Steuerfreie Fahrtkosten bei 
Auswärtstätigkeit</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element name="NErmStVBezMKalJahr" minOccurs="0" maxOccurs="12">
				<xs:annotation>
					<xs:documentation xml:lang="DE">Versorgungsbezüge für mehrere Kalenderjahre, die nicht ermäßigt besteuert wurden - in 3. und 8. enthalten</xs:documentation>
				</xs:annotation>
				<xs:complexType>
					<xs:simpleContent>
						<xs:extension base="elsterlohn:lstb_WertSType">
							<xs:attribute name="jahr" type="elsterbase:allg_Datum_JahrSType" use="required">
								<xs:annotation>
									<xs:documentation>Maßgebendes Kalenderjahr in dem die Rechtsgrundlage des Vorsorgungsbezug geschaffen wurde</xs:documentation>
								</xs:annotation>
							</xs:attribute>
						</xs:extension>
					</xs:simpleContent>
				</xs:complexType>
			</xs:element>
			<xs:element name="Wert" minOccurs="0" maxOccurs="10">
				<xs:annotation>
					<xs:documentation>freier Wert</xs:documentation>
				</xs:annotation>
				<xs:complexType>
					<xs:annotation>
						<xs:documentation xml:lang="DE">weitere vom Arbeitgeber freiwillig bescheinigte Werte</xs:documentation>
						<xs:documentation xml:lang="DE">Die Art des zu bescheinigenden Wertes muss in dem Attribut "name" mitgeteilt werden</xs:documentation>
					</xs:annotation>
					<xs:simpleContent>
						<xs:extension base="elsterlohn:lstb_WertSType">
							<xs:attribute name="name" use="required">
								<xs:annotation>
									<xs:documentation>Beschreibung um was für einen Wert es sich handelt.</xs:documentation>
								</xs:annotation>
								<xs:simpleType>
									<xs:restriction base="elsterbase:allg_BaseStringLightSType">
										<xs:maxLength value="60"/>
										<xs:minLength value="1"/>
									</xs:restriction>
								</xs:simpleType>
							</xs:attribute>
						</xs:extension>
					</xs:simpleContent>
				</xs:complexType>
			</xs:element>
			<xs:element name="Text" minOccurs="0" maxOccurs="10">
				<xs:annotation>
					<xs:documentation>freier Text</xs:documentation>
				</xs:annotation>
				<xs:complexType>
					<xs:annotation>
						<xs:documentation xml:lang="DE">weitere vom Arbeitgeber freiwillig becheinigte Texte</xs:documentation>
					</xs:annotation>
					<xs:simpleContent>
						<xs:extension base="elsterlohn:lstb_Text200">
							<xs:attribute name="name" use="required">
								<xs:annotation>
									<xs:documentation>Beschreibung um was für einen Wert es sich handelt.</xs:documentation>
								</xs:annotation>
								<xs:simpleType>
									<xs:restriction base="elsterbase:allg_BaseStringLightSType">
										<xs:maxLength value="60"/>
										<xs:minLength value="1"/>
									</xs:restriction>
								</xs:simpleType>
							</xs:attribute>
						</xs:extension>
					</xs:simpleContent>
				</xs:complexType>
			</xs:element>
			<xs:element name="Arbeitgeber" type="elsterlohn:lstb_ArbeitgeberCType"/>
