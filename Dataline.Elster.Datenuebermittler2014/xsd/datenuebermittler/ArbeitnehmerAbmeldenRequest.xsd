<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:elo2="http://www.elster.de/elo2/Basis" xmlns="http://www.elster.de/elo2/datenuebermittler/ArbeitnehmerAbmeldenRequest" targetNamespace="http://www.elster.de/elo2/datenuebermittler/ArbeitnehmerAbmeldenRequest" elementFormDefault="qualified" attributeFormDefault="unqualified">
	<xs:import namespace="http://www.elster.de/elo2/Basis" schemaLocation="../elo2basis.xsd"/>
	<xs:element name="ArbeitnehmerAbmeldenRequest">
		<xs:annotation>
			<xs:documentation>Abmelden von Arbeitnehmern</xs:documentation>
		</xs:annotation>
		<xs:complexType>
			<xs:annotation>
				<xs:documentation>Grunddaten eines Arbeitgebers</xs:documentation>
			</xs:annotation>
			<xs:sequence maxOccurs="unbounded">
				<xs:element name="Arbeitnehmer">
					<xs:annotation>
						<xs:documentation>Grunddaten eines Arbeitnehmers</xs:documentation>
					</xs:annotation>
					<xs:complexType>
						<xs:attribute name="idnr" type="elo2:allg_IdNrSType" use="required">
							<xs:annotation>
								<xs:documentation>IdNr des Arbeitnehmers nach §139b AO.</xs:documentation>
							</xs:annotation>
						</xs:attribute>
						<xs:attribute name="gebdat" type="elo2:Datum8SType" use="required">
							<xs:annotation>
								<xs:documentation>Geburtsdatum zur Verifikation. Lässt auch teilweise oder vollständig unbekannte Daten zu. In diesen Fällen wird der Wert für Tag, Monat oder Jahr entsprechend genullt (19501231, 19501200, 19500000, 00000000)</xs:documentation>
							</xs:annotation>
						</xs:attribute>
						<xs:attribute name="refDatumAG" type="elo2:allg_Datum8SType" use="required">
							<xs:annotation>
								<xs:documentation>Referenzdatum des Arbeitgebers, das in der abzumeldenden Anmeldung angegeben war. Angabe in der Form JJJJMMTT.    </xs:documentation>
							</xs:annotation>
						</xs:attribute>
						<xs:attribute name="abmeldeDatum" type="elo2:allg_Datum8SType" use="required">
							<xs:annotation>
								<xs:documentation>Ende des Beschäftigungsverhältnisses laut Arbeitsvertrag. Angabe in der Form JJJJMMTT.</xs:documentation>
							</xs:annotation>
						</xs:attribute>
					</xs:complexType>
				</xs:element>
			</xs:sequence>
			<xs:attribute name="stnrAG" type="elo2:allg_StNrSType" use="required">
				<xs:annotation>
					<xs:documentation>Steuernummer der lohnsteuerlichen Betriebsstätte des Arbeitgebers.</xs:documentation>
				</xs:annotation>
			</xs:attribute>
		</xs:complexType>
	</xs:element>
</xs:schema>
