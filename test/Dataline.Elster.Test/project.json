{
  "testRunner": "xunit",

  "configurations": {
    "Debug": {
      "buildOptions": {
        "define": [ "DEBUG" ],
        "debugType": "portable"
      }
    },
    "Release": {
      "buildOptions": {
        "debugType": "none",
        "optimize": true
      }
    }
  },

  "buildOptions": {
    "additionalArguments": [ "/ruleset:../../Dataline.ruleset", "/additionalfile:../../stylecop.json" ],
    "embed": "*/Daten/**/*.*"
  },

  "dependencies": {
    "JetBrains.Annotations": {
      "version": "10.1.5",
      "type": "build"
    },
    "StyleCop.Analyzers": {
      "version": "1.0.0",
      "type": "build"
    },
    "Dataline.Elster": { "target": "project" },
    "Dataline.Elster.Anmeldung": { "target": "project" },
    "Dataline.Elster.Lohn": { "target": "project" },
    "Dataline.Elster.Datenabholung": { "target": "project" },
    "Dataline.Elster.Datenuebermittler2014": { "target": "project" },
    "Dataline.Elster.Datenuebermittler2015": { "target": "project" },
    "xunit": "2.2.0-beta4-build3444",
    "dotnet-test-xunit": "2.2.0-preview2-build1029"
  },

  "frameworks": {
    "net451": {
      "frameworkAssemblies": {
        "System.Xml.Linq": ""
      }
    }
  }
}
